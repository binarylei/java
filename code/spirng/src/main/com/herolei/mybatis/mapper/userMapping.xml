<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.herolei.mybatis.mapper">

    <!---->
    <select id="getUserById" resultType="com.herolei.bean.UserBean" parameterType="int">
        SELECT * FROM user WHERE id=#{id}
    </select>

    <!--mybatis通过@调用 javal 类的静态代码和常量 1.static修辞的常量和方法 2.必须用$，不能用#-->
    <select id="getUserById2" resultType="com.herolei.bean.UserBean">
        SELECT * FROM user WHERE id=${@com.herolei.util.Constant@ID}
    </select>

    <!--mybatis通过@调用 javal 类的静态方法-->
    <select id="getUserById3" resultType="com.herolei.bean.UserBean">
        SELECT * FROM user WHERE id=${@com.herolei.util.Constant@getId()}
    </select>

    <!--mybatis通过@调用 javal 类的配置文件-->
    <select id="getUserById4" resultType="com.herolei.bean.UserBean">
        SELECT * FROM user WHERE id=${@com.herolei.util.Constant@ID_CONFIG}
    </select>

</mapper>
